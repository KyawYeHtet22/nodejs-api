{
  "swagger": "2.0",
  "info": {
    "description": "This is a simple API",
    "version": "1.0.0",
    "title": "Simple Inventory API",
    "contact": {
      "email": "you@your-company.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "admins",
      "description": "For admins"
    },
    {
      "name": "users",
      "description": "For users"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/heroes": {
      "get": {
        "tags": [
          "admins",
          "users"
        ],
        "summary": "Get heroes list",
        "description": "By passing in the appropriate options, you can get for\navailable heroes in the system\n",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Heroes"
            }
          },
          "500": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          }
        }
      }
    },
    "/heroes/createHero": {
      "post": {
        "tags": [
          "admins"
        ],
        "summary": "Create a hero",
        "description": "Adds a hero to the system",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "heroName",
            "in": "formData",
            "type": "string",
            "required": true,
            "unique": true
          },
          {
            "name": "heroType",
            "in": "formData",
            "type": "string",
            "required": true,
            "enum": [
              "Intelligent",
              "Strength",
              "Agility"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Hero1"
            }
          },
          "400": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          },
          "500": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          }
        }
      }
    },
    "/heroes/deleteHero/:heroId": {
      "delete": {
        "tags": [
          "admins"
        ],
        "summary": "Delete hero",
        "description": "Deleting a hero",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "heroId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/SuccessMessage"
            }
          },
          "404": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          },
          "500": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          }
        }
      }
    },
    "/heroes/updateHero/:heroId": {
      "put": {
        "tags": [
          "admins"
        ],
        "summary": "Update a hero",
        "description": "Update existed hero from the system",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "heroId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "heroName",
            "in": "formData",
            "type": "string",
            "required": true,
            "unique": true
          },
          {
            "name": "heroType",
            "in": "formData",
            "type": "string",
            "required": true,
            "enum": [
              "Intelligent",
              "Strength",
              "Agility"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/SuccessMessage"
            }
          },
          "400": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          },
          "500": {
            "description": "Fail",
            "schema": {
              "$ref": "#/definitions/FailMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Hero": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
        },
        "heroName": {
          "type": "string",
          "example": "Slark"
        },
        "heroType": {
          "type": "string",
          "example": "Agility"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "example": "2016-08-29T09:12:33.001Z"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "example": "2016-08-29T09:12:33.001Z"
        },
        "__v": {
          "type": "int",
          "example": 0
        }
      }
    },
    "Hero1": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid",
              "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
            },
            "heroName": {
              "type": "string",
              "example": "Slark"
            },
            "heroType": {
              "type": "string",
              "example": "Agility"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "example": "2016-08-29T09:12:33.001Z"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time",
              "example": "2016-08-29T09:12:33.001Z"
            },
            "__v": {
              "type": "int",
              "example": 0
            }
          }
        }
      }
    },
    "Heroes": {
      "type": "object",
      "properties": {
        "heroes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Hero"
          }
        }
      }
    },
    "SuccessMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Deleted/Updated Successfully"
        }
      }
    },
    "FailMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Something went wrong"
        }
      }
    }
  }
}